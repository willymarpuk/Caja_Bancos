<h1>Firmantes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @firmantes.each do |firmante| %>
      <tr>
        <td><%= firmante.nombre %></td>
        <td><%= link_to 'Mostrar', firmante %></td>
        <td><%= link_to 'Editar', edit_firmante_path(firmante) %></td>
        <td><%= link_to 'Destruir', firmante, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Firmante', new_firmante_path %>
