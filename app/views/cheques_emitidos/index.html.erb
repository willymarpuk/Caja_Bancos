<h1> Cheques Emitidos <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1"><span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span></button></h1>
<div id="form1">
  <%= render 'form' %>
</div>
<!-- botones de reporte -->
<div class="reports" style="margin-left: 90.333333%">
  <%= link_to '#', onclick: "printpage()", class: 'btn btn-print btn-outline btn-circle', title: 'Imprimir reporte', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span class="glyphicon glyphicon-print" style="color: white"></span>
  <% end %>
  <%= link_to cheques_emitidos_path(@cheques_emitidos, format: 'pdf'), class: 'btn btn-pdf btn-outline btn-circle', title: 'Exportar en formato PDF', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span style="color: white">PDF</span>
  <% end %>
  <%= link_to cheques_emitidos_path(:format => :xls), class: 'btn btn-xls btn-outline btn-circle', title: 'Exportar en formato XLS', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span style="color: white">XLS</span>
  <% end %>
</div><!-- botones de reporte -->
</br>

<table id="table">
  <thead>
    <tr>
      <th>Id cuenta bancaria</th>
      <th>Id banco</th>
      <th>Fecha</th>
      <th>Concepto</th>
      <th>Monto</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @cheques_emitidos.each do |cheques_emitido| %>
      <tr>
        <td><%= cheques_emitido.id_cuenta_bancaria %></td>
        <td><%= cheques_emitido.id_banco %></td>
        <td><%= cheques_emitido.fecha %></td>
        <td><%= cheques_emitido.concepto %></td>
        <td><%= cheques_emitido.monto %></td>
        <td>
            <%= link_to edit_cheques_emitido_path(cheques_emitido), class: 'btn btn-warning btn-outline btn-circle', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
            
            <%= link_to cheques_emitido, method: :delete, data: { confirm: 'Va eliminarlo, esta seguro?' }, class: 'btn btn-danger btn-outline btn-circle', title: 'Borrar', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

