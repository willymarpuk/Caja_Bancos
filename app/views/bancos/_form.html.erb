<%= form_for(@banco) do |f| %> 
  <% if @banco.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@banco.errors.count, "errores") %> prohiben que este banco sea guardado:</h2>

      <ul>
      <% @banco.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
      <div class="field">
        <%= f.label :nombre_banco %><br>
        <%= f.text_field :nombre_banco, :class => 'form-control' %> <br>
      </div>
      <div class="field">
        <%= f.label :sucursal %><br>
        <%= f.text_field :sucursal, :class => 'form-control' %> <br>
      </div>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
      <div class="field">
        <%= f.label :direccion %><br>
        <%= f.text_field :direccion, :class => 'form-control' %> <br>
      </div>
      <div class="field">
        <%= f.label :telefono %><br>
        <%= f.text_field :telefono, :class => 'form-control' %> <br>
      </div>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
      <div class="field">
        <%= f.label :correo %><br>
        <%= f.text_field :correo, :class => 'form-control' %> <br>
      </div>
    </div>
  </div>
  <div class="actions">
    <% if controller.action_name == 'new' or controller.action_name == 'index' %>
      <%= f.submit "Agregar", :class => 'btn btn-primary'%>
    <% elsif controller.action_name == 'edit' %>
      <%= f.submit "Actualizar", :class => 'btn btn-primary'%>
    <% end %>
  </div>
<% end %>