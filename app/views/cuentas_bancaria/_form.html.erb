<%= form_for(@cuentas_bancarium) do |f| %>
  <% if @cuentas_bancarium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cuentas_bancarium.errors.count, "errores") %> prohiben que esta cuenta bancaria sea guardada:</h2>

      <ul>
      <% @cuentas_bancarium.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
<div class="col-md-3">
      <div class="field">
        <label for="cuentas_bancarium_id_banco">Banco  
            <%= link_to "#modal-banco", "data-toggle" => "modal" , class: 'btn btn-warning btn-outline btn-circle' do %>
              <span class="glyphicon glyphicon-plus"></span>
            <% end %>
        </label>
        </br>
        <%= f.collection_select :id_banco, Banco.all,:id, :name_with_initial, {prompt: "Seleccione un banco"}, {class: "form-control"}%>
      </div>
</div>
<div class="col-md-3">
    <div class="field">
    <%= f.label :fecha_de_apertura %><br>
    <%= f.text_field :fecha_de_apertura, :class => 'datepicker form-control' %>
  </div>
</div>
<div class="col-md-3">
  <div class="field">
     <i class="glyphicon glyphicon-usd"></i> <%= f.label :saldo %><br>
    <%= f.text_field :saldo, :class => 'form-control', data: { role: 'money', a_sep: '.', a_dec: ',' }, value: 0 %>
  </div>
</div>
<div class="col-md-3">
  <div class="field">
    <%= f.label :id_firmante %><br>
    <%= f.number_field :id_firmante, :class => 'form-control' %>
  </div>
</div>
 </div>
 <br>
  <div class="actions">
    <% if controller.action_name == 'new' or controller.action_name == 'index' %>
      <%= f.submit "Agregar", :class => 'btn btn-primary'%>
    <% elsif controller.action_name == 'edit' %>
      <%= f.submit "Actualizar", :class => 'btn btn-primary'%>
    <% end %>
  </div>
<% end %>
<br>
<%= render 'cuentas_bancaria/modals/banco' %>