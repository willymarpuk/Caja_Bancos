<h1> Cuentas Bancarias <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1"><span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span></button></h1>
<div id="form1">
  <%= render 'form' %>
</div>
<table id="table">
  <thead>
    <tr>
      <th>Id banco</th>
      <th>Nro cuenta</th>
      <th>Fecha de apertura</th>
      <th>Saldo</th>
      <th>Id firmante</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cuentas_bancaria.each do |cuentas_bancarium| %>
      <tr>
        <td><%= cuentas_bancarium.id_banco %></td>
        <td><%= cuentas_bancarium.nro_cuenta %></td>
        <td><%= cuentas_bancarium.fecha_de_apertura %></td>
        <td><%= cuentas_bancarium.saldo %></td>
        <td><%= cuentas_bancarium.id_firmante %></td>
        <td>
            <%= link_to edit_cuentas_bancarium_path(cuentas_bancarium), class: 'btn btn-warning btn-outline btn-circle', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
            <%= link_to cuentas_bancarium, method: :delete, data: { confirm: 'Va eliminarlo, esta seguro?' }, class: 'btn btn-danger btn-outline btn-circle', title: 'Borrar', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  do %>
                <span class="glyphicon glyphicon-remove"></span>
            <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>

    <div class="reports" style="margin-left: 90.333333%">
    <%= link_to '#', onclick: "printpage()", class: 'btn btn-print btn-outline btn-circle', title: 'Imprimir reporte', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
      <span class="glyphicon glyphicon-print" style="color: white"></span>
    <% end %>
    <%= link_to cuentas_bancaria_path(@cuentas_bancaria, format: 'pdf'), class: 'btn btn-pdf btn-outline btn-circle', title: 'Exportar en formato PDF', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
      <span style="color: white">PDF</span>
    <% end %>
    <%= link_to cuentas_bancaria_path(:format => :xls), class: 'btn btn-xls btn-outline btn-circle', title: 'Exportar en formato XLS', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
      <span style="color: white">XLS</span>
    <% end %>
  </div>
  </br>
</table>

