<h1> Movimientos de Bancos <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1"><span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span></button></h1>
<div id="form1">
  <%= render 'form' %>
</div>
<table id="table">
  <thead>
    <tr>
      <th>Id tipo de movimiento</th>
      <th>Id banco</th>
      <th>Id cuenta bancaria</th>
      <th>Descripcion</th>
      <th>Monto</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movimientos_de_bancos.each do |movimientos_de_banco| %>
      <tr>
        <td><%= movimientos_de_banco.id_tipo_de_movimiento.descripcion %></td>
        <td><%= movimientos_de_banco.id_banco %></td>
        <td><%= movimientos_de_banco.id_cuenta_bancaria %></td>
        <td><%= movimientos_de_banco.descripcion %></td>
        <td><%= movimientos_de_banco.monto %></td>
        <td>            
          <%= link_to edit_movimientos_de_banco_path(movimientos_de_banco), class: 'btn btn-warning btn-outline btn-circle', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
              <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to movimientos_de_banco, method: :delete, data: { confirm: 'Va eliminarlo, esta seguro?' }, class: 'btn btn-danger btn-outline btn-circle', title: 'Borrar', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  do %>
              <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
    <div class="reports" style="margin-left: 90.333333%">
    <%= link_to '#', onclick: "printpage()", class: 'btn btn-print btn-outline btn-circle', title: 'Imprimir reporte', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
      <span class="glyphicon glyphicon-print" style="color: white"></span>
    <% end %>
    <%= link_to movimientos_de_bancos_path(@movimientos_de_bancos, format: 'pdf'), class: 'btn btn-pdf btn-outline btn-circle', title: 'Exportar en formato PDF', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
      <span style="color: white">PDF</span>
    <% end %>
    <%= link_to movimientos_de_bancos_path(:format => :xls), class: 'btn btn-xls btn-outline btn-circle', title: 'Exportar en formato XLS', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
      <span style="color: white">XLS</span>
    <% end %>
  </div>
  </br>
</table>

